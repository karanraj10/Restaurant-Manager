<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorWhite"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:scaleType="centerCrop"
                android:id="@+id/admin_manage_food_image"
                android:src="@drawable/ic_fast_food"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="20sp"
            android:lines="2"
            android:id="@+id/admin_manage_food_name"
            android:layout_marginTop="5dp"
            android:layout_marginStart="110dp"
            android:text="Egg Keema Egg Keema"
            />
        <TextView
            android:layout_below="@id/admin_manage_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/admin_manage_food_price"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="â‚¹ 100/-"
            android:layout_marginTop="10dp"
            android:layout_marginStart="110dp"
            />
        <ImageView
            android:textColor="@color/colorWhite"
            android:id="@+id/admin_manage_food_deletebutton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_delete"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Add" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>